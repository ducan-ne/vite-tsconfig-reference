{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsxdev",
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["../pkg/*"],
      "@fe/*": ["../src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "../src/vite-env.d.ts"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../api/tsconfig.json"
    },
    {
      "path": "../tsconfig.json"
    }
  ],
  "include": ["**/*.ts", "**/*.tsx", "../src/vite-env.d.ts"]
}
